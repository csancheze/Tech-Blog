<div>
    <div>
        <div class="bg-secondary mt-2" style="display:flex; justify-content:space-between; border-radius: 5pt">
        <h2 class="p-3">{{title}}</h2> <span class="p-2"> {{format_date date_created}}</span>
        </div>
        <form id="post-update-form" data-id="{{id}}">
            
            <div class="mb-3 mt-3">
            <label for="post-title"  class="form-label">Post title:</label>
            <input   class="form-control" type="text" id="post-title" name="post-title" placeholder="{{title}}"  />
            </div>
            <textarea class="form-control" id="update-post" name="update-post">{{content}}</textarea>
            <button type="submit"  class="mt-3  btn btn-secondary">Update Post</button>
        </form>
        <button class= "mt-3 btn btn-danger" id="delete"data-id="{{id}}">Delete</button>
    </div>
</div>
<script src="/js/post_edit.js"></script>